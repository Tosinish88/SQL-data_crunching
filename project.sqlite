/*NOTE: In some of this solutions, I have gone a step further by introducing limits, sorting the query result e.t.c. I have sometimes also combined multiply answer in one block of code if they are just one step further*/

/*1.*/
SELECT *
FROM startups;

/*2. 70*/
SELECT COUNT(*)
FROM startups;

/*3. 974,455,790,000*/
SELECT SUM(valuation)
FROM startups;

/*4. REBU has the highest amount 11,500,000,000*/
SELECT name, MAX(raised)
FROM startups
GROUP BY name
ORDER BY 2 desc
limit 10;


/*5. Voice2Txt raised the maximum amount of 1,800,000 during seed stage*/
SELECT name, MAX(raised)
FROM startups
WHERE stage = "Seed"
GROUP BY name
ORDER BY 2 desc
limit 10;

/*6. RICE Media is the oldest company founded in 1994 */
SELECT name, founded
FROM startups
ORDER BY 2;


/*7. The average valuation is 15,974,685,082.0 round to the nearest whole number*/
SELECT ROUND(AVG(valuation), 0)
FROM startups;


/*8-10. I noticed that there was a NULL category and a NULL average*/
SELECT category, ROUND(AVG(valuation), 2) AS "average"
FROM startups
GROUP BY 1
ORDER BY average desc;


/* 11 & 12.*/
SELECT category, COUNT(*)
FROM startups
GROUP BY category
HAVING COUNT(*) > 3
ORDER BY 2 desc;


/* 13 & 14 combined*/
SELECT location, ROUND(AVG(employees), 0) AS "size"
FROM startups
GROUP BY location
HAVING size > 500
ORDER BY 2 desc;


/* EXTRA. Number of startup in a particular location sorted from highest to lowest*/
SELECT location, COUNT(name) AS "number"
FROM startups
GROUP BY location
ORDER BY number desc;















